    <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl lg:text-4xl font-bold text-secondary mb-4">Workflow Transformation</h2>
                <p class="text-xl text-text-secondary max-w-3xl mx-auto">See how practices save hours daily by transitioning from manual to automated scheduling</p>
            </div>

            <div class="grid lg:grid-cols-2 gap-12">
                <!-- Before: Manual Process -->
                <div class="bg-surface-50 rounded-lg p-8">
                    <div class="flex items-center mb-6">
                        <div class="w-8 h-8 bg-error-100 rounded-full flex items-center justify-center mr-3">
                            <svg class="w-4 h-4 text-error" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                            </svg>
